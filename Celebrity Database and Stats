Select * from celebrities;

SELECT * from celebrity_spouse;


SELECT celebrities.first_name, celebrities.last_name, celebrity_spouse.spouse 
FROM celebrities 
inner join celebrity_spouse 
ON celebrity_spouse.id=celebrities.id
